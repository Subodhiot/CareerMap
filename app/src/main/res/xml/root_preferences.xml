<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory app:title="General"
        app:iconSpaceReserved="false"
        >
        <Preference
            app:key="contact"
            app:title="Contact Us"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="About"
        app:iconSpaceReserved="false"
        >
        <Preference
            app:key="about"
            app:title="This app helps users find their ideal profession by assessing their interests, skills, and personality traits. It generates a personalized report with recommended career paths, along with information on education, skills, and job outlook. The app also provides resources to further explore each career path."
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>


    <PreferenceCategory app:title="Developer"
        app:iconSpaceReserved="false">
        <Preference
            app:key="bug"
            app:title="Bug Report"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="resources"
            app:title="Resources Used"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://sites.google.com/view/docx2pdf/resources-used"
                />
        </Preference>
        <Preference
            app:key="libraries"
            app:title="Open Source Libraries"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            />

        <Preference
            app:key="terms"
            app:title="Terms And Conditions"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://sites.google.com/view/docx2pdf/terms-conditions"
                />
        </Preference>

        <Preference
            app:key="privacy"
            app:title="Privacy Policy"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://sites.google.com/view/docx2pdf/home"
                />
        </Preference>


    </PreferenceCategory>

</PreferenceScreen>